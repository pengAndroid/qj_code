<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x640"
    android:layout_height="@dimen/x409"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/in_tele_bg"
    >

    <TextView
        android:id="@+id/dialog_in_tele_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y48"
        android:text="1号探视机"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x42" />


    <LinearLayout
        android:layout_width="@dimen/x640"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >
            <Button
                android:id="@+id/dialog_in_tele_connect"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y80"
                android:text="接听"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x32"
                android:background="@drawable/selsect_in_tele_btn"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >
            <Button
                android:id="@+id/dialog_in_tele_cut"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y80"
                android:text="挂断"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x32"
                android:background="@drawable/selsect_in_tele_btn"
                />
            <!--android:background="@drawable/in_tele_cut_bg"-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>